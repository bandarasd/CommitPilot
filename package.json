{
  "name": "commitpilot",
  "displayName": "CommitPilot",
  "description": "AI-powered Git commit message generator for VS Code. Generate meaningful commit messages using AI based on your staged changes.",
  "version": "0.0.1",
  "publisher": "DananjayaBandara",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "assistant",
    "openai",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bandarasd/CommitPilot.git"
  },
  "bugs": {
    "url": "https://github.com/bandarasd/CommitPilot/issues"
  },
  "homepage": "https://github.com/bandarasd/CommitPilot#readme",
  "license": "MIT",
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitpilot.getDiff",
        "title": "CommitPilot: Get Staged Git Diff"
      },
      {
        "command": "commitpilot.generateCommitMessage",
        "title": "CommitPilot: Generate AI Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "commitpilot.test",
        "title": "CommitPilot: Test Extension"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commitpilot-explorer",
          "title": "CommitPilot",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "commitpilot-explorer": [
        {
          "type": "webview",
          "id": "commitpilot.sidebar",
          "name": "AI Commit Generator",
          "icon": "$(sparkle)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "commitpilot.generateCommitMessage",
        "key": "ctrl+shift+g ctrl+m",
        "when": "scmProvider == git"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitpilot.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "openai": "^5.23.0"
  }
}
